generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.0.x"]
}

generator erd {
  provider = "prisma-erd-generator"
  output = "../docs/ERD.svg"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id      BigInt   @id @default(autoincrement())
  email   String   @unique
  role    String   
}
